{
    "name": "conia/core",
    "description": "Conia CMS/CMF Core Library",
    "type": "library",
    "authors": [
        {
            "name": "ebene f√ºnf GmbH",
            "email": "info@ebenefuenf.de"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "conia/chuck": "dev-main",
        "conia/cli": "dev-main",
        "conia/i18n": "dev-main",
        "conia/quma": "dev-main",
        "conia/sire": "dev-main",
        "conia/session": "dev-main",
        "conia/sizer": "dev-main",
        "hidehalo/nanoid-php": "^1.1",
        "pestphp/pest": "2.x-dev",
        "symfony/html-sanitizer": "6.3.x-dev"
    },
    "require-dev": {
        "conia/boiler": "dev-main",
        "nyholm/psr7": "^1.5",
        "nyholm/psr7-server": "^1",
        "phpunit/phpunit": "10.0.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Conia\\Core\\": "src"
        },
        "files": [
            "src/Util/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Conia\\Core\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        }
    }
}
